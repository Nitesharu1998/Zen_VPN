<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appbg"
        tools:context="com.countries.vpn.Fragment.WebSurfingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--appbar-->
            <LinearLayout
                android:id="@+id/ll_appbar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/ic_navbg"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_12sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:backgroundTint="@color/appbg"
                    app:cardCornerRadius="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_4sdp">

                        <ImageView
                            android:paddingTop="@dimen/_2sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:src="@drawable/ic_google" />

                        <EditText
                            android:id="@+id/edt_website"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:background="@null"
                            android:singleLine="true"
                            android:inputType="textUri"
                            android:imeOptions="actionSend"
                            android:gravity="center_vertical"
                            android:hint="Enter Website"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/iv_listSavedBookMarks"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:src="@drawable/ic_list_bookmarks" />

            </LinearLayout>
            <!--appbar-->
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--static links-->

                <GridLayout
                    android:id="@+id/gl_staticgrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:columnCount="4" />

                <!--static links-->


            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</layout>